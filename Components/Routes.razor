<Router AppAssembly="@typeof(MauiProgram).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <div style="display: flex; align-items: center; justify-content: center; height: 100vh; background: #F7FAF7;">
            <div style="text-align: center;">
                <h1 style="font-size: 72px; margin: 0; color: #5C715E;">404</h1>
                <p style="font-size: 18px; color: #6b7280; margin: 16px 0;">Page not found</p>
                <a href="/login" style="display: inline-block; padding: 12px 24px; background: #5C715E; color: white; text-decoration: none; border-radius: 12px; font-weight: 500;">Go to Login</a>
            </div>
        </div>
    </NotFound>
</Router>
