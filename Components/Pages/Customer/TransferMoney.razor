                    <textarea class="form-control" rows="2" placeholder="Payment purpose..."></textarea>
                </div>
                <div class="form-group">
                    <label class="form-label">Transfer Schedule</label>
                    <select class="form-control">
                        <option>Transfer Now</option>
                        <option>Schedule for Later</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Scheduled Date/Time</label>
                    <input type="datetime-local" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div style="display: flex; gap: 12px; justify-content: flex-end;">
            <button type="button" class="btn" style="background: #f3f4f6; color: #374151;">Reset</button>
