@page "/customer/profile"
@layout CustomerLayout

<div class="section-header">
    <h2 class="section-title">My Profile</h2>
</div>

<div style="background: white; border-radius: 16px; padding: 32px; border: 1px solid var(--border); text-align: center; margin-bottom: 24px;">
    <div style="width: 80px; height: 80px; border-radius: 50%; background: var(--accent); color: white; display: flex; align-items: center; justify-content: center; font-size: 32px; font-weight: 700; margin: 0 auto 16px;">
        CU
    </div>
    <h2 style="font-size: 24px; font-weight: 700; margin-bottom: 4px;">Customer User</h2>
    <p style="color: var(--text-light); margin-bottom: 20px;">customer@bfas.com</p>
    <button class="btn btn-secondary">Edit Profile</button>
</div>

<div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid var(--border); margin-bottom: 16px;">
    <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Personal Information</h3>
    
    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px;">
        <div>
            <div style="font-size: 12px; color: var(--text-light); margin-bottom: 4px;">Full Name</div>
            <div style="font-size: 14px; font-weight: 600;">Customer User</div>
        </div>
        <div>
            <div style="font-size: 12px; color: var(--text-light); margin-bottom: 4px;">Email</div>
            <div style="font-size: 14px; font-weight: 600;">customer@bfas.com</div>
        </div>
        <div>
            <div style="font-size: 12px; color: var(--text-light); margin-bottom: 4px;">Phone</div>
            <div style="font-size: 14px; font-weight: 600;">+63 912 345 6789</div>
        </div>
        <div>
            <div style="font-size: 12px; color: var(--text-light); margin-bottom: 4px;">Member Since</div>
            <div style="font-size: 14px; font-weight: 600;">January 2024</div>
        </div>
    </div>
</div>
