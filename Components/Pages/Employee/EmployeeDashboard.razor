@page "/employee/dashboard"
@layout EmployeeLayout

<div style="padding: 24px; max-width: 1400px; margin: 0 auto;">
    <!-- Header with Filter -->
    <div style="background: linear-gradient(135deg, #059669, #047857); border-radius: 16px; padding: 24px; margin-bottom: 24px; color: white;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h1 style="font-size: 24px; font-weight: 700; margin: 0;">Employee Dashboard</h1>
                <p style="margin: 8px 0 0; font-size: 14px; opacity: 0.9;">Your work overview and tasks</p>
            </div>
            <div style="display: flex; gap: 8px;">
                <button @onclick='() => selectedPeriod = "day"' style='padding: 8px 16px; background: @(selectedPeriod == "day" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "day" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Day</button>
                <button @onclick='() => selectedPeriod = "week"' style='padding: 8px 16px; background: @(selectedPeriod == "week" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "week" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Week</button>
                <button @onclick='() => selectedPeriod = "month"' style='padding: 8px 16px; background: @(selectedPeriod == "month" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "month" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Month</button>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 24px;">
        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #fef3c7;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #fef3c7; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#f59e0b" stroke-width="2">
                        <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">My Tasks</div>
                    <div style="font-size: 24px; font-weight: 700; color: #f59e0b;">12</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #10b981;">3 completed today</div>
        </div>

        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #dbeafe;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #dbeafe; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#0891b2" stroke-width="2">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Approvals</div>
                    <div style="font-size: 24px; font-weight: 700; color: #0891b2;">8</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #10b981;">5 processed today</div>
        </div>

        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #d1fae5;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#059669" stroke-width="2">
                        <path d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Completed</div>
                    <div style="font-size: 24px; font-weight: 700; color: #059669;">45</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #10b981;">This @selectedPeriod</div>
        </div>

        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #fee2e2;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #fee2e2; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#dc2626" stroke-width="2">
                        <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Overdue</div>
                    <div style="font-size: 24px; font-weight: 700; color: #dc2626;">2</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #dc2626;">Requires attention</div>
        </div>
    </div>

    <!-- Charts Row -->
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 24px;">
        <!-- Task Completion Chart -->
        <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
            <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Task Completion This Week</h3>
            <div style="display: flex; align-items: flex-end; gap: 12px; height: 200px;">
                @foreach (var data in weeklyData)
                {
                    <div style="flex: 1; display: flex; flex-direction: column; align-items: center; gap: 8px;">
                        <div style='width: 100%; background: linear-gradient(180deg, #059669, #047857); border-radius: 8px 8px 0 0; height: @(data.Value * 10)%; min-height: 10px; transition: all 0.3s;'></div>
                        <div style="font-size: 11px; color: #6b7280; font-weight: 600;">@data.Label</div>
                        <div style="font-size: 12px; font-weight: 700; color: #059669;">@data.Value</div>
                    </div>
                }
            </div>
        </div>

        <!-- Performance Summary -->
        <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
            <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Performance</h3>
            <div style="display: flex; flex-direction: column; gap: 16px;">
                <div style="padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style="font-size: 12px; color: #6b7280;">Completion Rate</div>
                    <div style="display: flex; align-items: center; gap: 8px; margin-top: 4px;">
                        <div style="flex: 1; height: 8px; background: #e5e7eb; border-radius: 4px; overflow: hidden;">
                            <div style="width: 92%; height: 100%; background: #059669;"></div>
                        </div>
                        <span style="font-size: 14px; font-weight: 700;">92%</span>
                    </div>
                </div>
                <div style="padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style="font-size: 12px; color: #6b7280;">Avg. Response Time</div>
                    <div style="font-size: 20px; font-weight: 700; margin-top: 4px; color: #059669;">2.4h</div>
                </div>
                <div style="padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style="font-size: 12px; color: #6b7280;">Quality Score</div>
                    <div style="font-size: 14px; font-weight: 700; color: #10b981; margin-top: 4px;">Excellent</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
        <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 16px;">Recent Activity</h3>
        <div style="display: flex; flex-direction: column; gap: 12px;">
            @foreach (var activity in recentActivities)
            {
                <div style="display: flex; align-items: center; gap: 12px; padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style='width: 32px; height: 32px; background: @activity.Color; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;'>
                        <svg width="16" height="16" fill="none" stroke="white" stroke-width="2">
                            <path d="@activity.Icon"/>
                        </svg>
                    </div>
                    <div style="flex: 1;">
                        <div style="font-weight: 600; font-size: 14px;">@activity.Title</div>
                        <div style="font-size: 12px; color: #6b7280;">@activity.Description</div>
                    </div>
                    <div style="font-size: 11px; color: #9ca3af;">@activity.Time</div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string selectedPeriod = "week";
    
    private List<ChartData> weeklyData = new()
    {
        new() { Label = "Mon", Value = 8 },
        new() { Label = "Tue", Value = 12 },
        new() { Label = "Wed", Value = 6 },
        new() { Label = "Thu", Value = 15 },
        new() { Label = "Fri", Value = 9 },
        new() { Label = "Sat", Value = 3 },
        new() { Label = "Sun", Value = 1 }
    };

    private List<Activity> recentActivities = new()
    {
        new() { Title = "Deposit Approved", Description = "₱50,000 deposit for Juan Dela Cruz", Time = "10 min ago", Color = "#059669", Icon = "M9 12l2 2 4-4" },
        new() { Title = "Task Completed", Description = "Customer verification process", Time = "25 min ago", Color = "#0891b2", Icon = "M5 13l4 4L19 7" },
        new() { Title = "Document Reviewed", Description = "Loan application documents", Time = "1 hour ago", Color = "#f59e0b", Icon = "M9 12h6m-6 4h6" },
        new() { Title = "Transfer Processed", Description = "₱25,000 inter-bank transfer", Time = "2 hours ago", Color = "#6366f1", Icon = "M7 7h10M7 12h10M7 17h10" }
    };

    private class ChartData
    {
        public string Label { get; set; } = "";
        public int Value { get; set; }
    }

    private class Activity
    {
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Time { get; set; } = "";
        public string Color { get; set; } = "";
        public string Icon { get; set; } = "";
    }
}
