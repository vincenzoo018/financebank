@page "/admin/dashboard"
@layout AdminLayout

<div style="padding: 24px; max-width: 1400px; margin: 0 auto;">
    <!-- Header with Filter -->
    <div style="background: linear-gradient(135deg, #059669, #047857); border-radius: 16px; padding: 24px; margin-bottom: 24px; color: white;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h1 style="font-size: 24px; font-weight: 700; margin: 0;">Admin Dashboard</h1>
                <p style="margin: 8px 0 0; font-size: 14px; opacity: 0.9;">System overview and analytics</p>
            </div>
            <div style="display: flex; gap: 8px;">
                <button @onclick='() => selectedPeriod = "hour"' style='padding: 8px 16px; background: @(selectedPeriod == "hour" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "hour" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Hour</button>
                <button @onclick='() => selectedPeriod = "day"' style='padding: 8px 16px; background: @(selectedPeriod == "day" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "day" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Day</button>
                <button @onclick='() => selectedPeriod = "month"' style='padding: 8px 16px; background: @(selectedPeriod == "month" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "month" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Month</button>
                <button @onclick='() => selectedPeriod = "year"' style='padding: 8px 16px; background: @(selectedPeriod == "year" ? "white" : "rgba(255,255,255,0.2)"); color: @(selectedPeriod == "year" ? "#059669" : "white"); border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;'>Year</button>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 24px;">
        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #d1fae5;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#059669" stroke-width="2">
                        <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Total Users</div>
                    <div style="font-size: 24px; font-weight: 700; color: #059669;">1,234</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #10b981;">↑ 12% from last @selectedPeriod</div>
        </div>

        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #dbeafe;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #dbeafe; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#0891b2" stroke-width="2">
                        <path d="M7 7h10M7 12h10M7 17h10"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Transactions</div>
                    <div style="font-size: 24px; font-weight: 700; color: #0891b2;">2,456</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #10b981;">↑ 8% from last @selectedPeriod</div>
        </div>

        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #fef3c7;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #fef3c7; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#f59e0b" stroke-width="2">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Pending</div>
                    <div style="font-size: 24px; font-weight: 700; color: #f59e0b;">42</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #dc2626;">3 urgent items</div>
        </div>

        <div style="background: white; border-radius: 12px; padding: 20px; border: 2px solid #e0e7ff;">
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                <div style="width: 40px; height: 40px; background: #e0e7ff; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="20" height="20" fill="none" stroke="#6366f1" stroke-width="2">
                        <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div>
                    <div style="font-size: 12px; color: #6b7280;">Revenue</div>
                    <div style="font-size: 24px; font-weight: 700; color: #6366f1;">₱2.5M</div>
                </div>
            </div>
            <div style="font-size: 11px; color: #10b981;">↑ 15% from last @selectedPeriod</div>
        </div>
    </div>

    <!-- Charts Row -->
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 24px;">
        <!-- Transaction Volume Chart -->
        <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
            <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Transaction Volume</h3>
            <div style="display: flex; align-items: flex-end; gap: 12px; height: 200px;">
                @foreach (var data in chartData)
                {
                    <div style="flex: 1; display: flex; flex-direction: column; align-items: center; gap: 8px;">
                        <div style='width: 100%; background: linear-gradient(180deg, #059669, #047857); border-radius: 8px 8px 0 0; height: @(data.Value / 20)%; min-height: 20px; transition: all 0.3s;'></div>
                        <div style="font-size: 11px; color: #6b7280; font-weight: 600;">@data.Label</div>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Stats -->
        <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
            <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Quick Stats</h3>
            <div style="display: flex; flex-direction: column; gap: 16px;">
                <div style="padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style="font-size: 12px; color: #6b7280;">Approval Rate</div>
                    <div style="display: flex; align-items: center; gap: 8px; margin-top: 4px;">
                        <div style="flex: 1; height: 8px; background: #e5e7eb; border-radius: 4px; overflow: hidden;">
                            <div style="width: 94%; height: 100%; background: #059669;"></div>
                        </div>
                        <span style="font-size: 14px; font-weight: 700;">94%</span>
                    </div>
                </div>
                <div style="padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style="font-size: 12px; color: #6b7280;">Active Sessions</div>
                    <div style="font-size: 20px; font-weight: 700; margin-top: 4px;">156</div>
                </div>
                <div style="padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style="font-size: 12px; color: #6b7280;">System Health</div>
                    <div style="font-size: 14px; font-weight: 700; color: #10b981; margin-top: 4px;">Excellent</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
        <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 16px;">Recent Activity</h3>
        <div style="display: flex; flex-direction: column; gap: 12px;">
            @foreach (var activity in recentActivities)
            {
                <div style="display: flex; align-items: center; gap: 12px; padding: 12px; background: #f9fafb; border-radius: 8px;">
                    <div style='width: 32px; height: 32px; background: @activity.Color; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;'>
                        <svg width="16" height="16" fill="none" stroke="white" stroke-width="2">
                            <path d="@activity.Icon"/>
                        </svg>
                    </div>
                    <div style="flex: 1;">
                        <div style="font-weight: 600; font-size: 14px;">@activity.Title</div>
                        <div style="font-size: 12px; color: #6b7280;">@activity.Description</div>
                    </div>
                    <div style="font-size: 11px; color: #9ca3af;">@activity.Time</div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string selectedPeriod = "day";
    
    private List<ChartData> chartData = new()
    {
        new() { Label = "Mon", Value = 1200 },
        new() { Label = "Tue", Value = 1900 },
        new() { Label = "Wed", Value = 1500 },
        new() { Label = "Thu", Value = 2100 },
        new() { Label = "Fri", Value = 1800 },
        new() { Label = "Sat", Value = 900 },
        new() { Label = "Sun", Value = 600 }
    };

    private List<Activity> recentActivities = new()
    {
        new() { Title = "New User Registered", Description = "Juan Dela Cruz created account", Time = "2 min ago", Color = "#059669", Icon = "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" },
        new() { Title = "Deposit Approved", Description = "₱50,000 deposit processed", Time = "5 min ago", Color = "#0891b2", Icon = "M12 5v14M5 12l7 7 7-7" },
        new() { Title = "Security Alert", Description = "Failed login attempt detected", Time = "12 min ago", Color = "#dc2626", Icon = "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" },
        new() { Title = "Report Generated", Description = "Monthly financial report ready", Time = "1 hour ago", Color = "#f59e0b", Icon = "M9 12h6m-6 4h6" }
    };

    private class ChartData
    {
        public string Label { get; set; } = "";
        public decimal Value { get; set; }
    }

    private class Activity
    {
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Time { get; set; } = "";
        public string Color { get; set; } = "";
        public string Icon { get; set; } = "";
    }
}
