@page "/admin/approvals/transfers"
@layout AdminLayout

<div style="padding: 24px; max-width: 1400px; margin: 0 auto;">
    <!-- Header -->
    <div style="background: linear-gradient(135deg, #0891b2, #0e7490); border-radius: 16px; padding: 24px; margin-bottom: 24px; color: white;">
        <div style="display: flex; align-items: center; gap: 16px;">
            <div style="width: 48px; height: 48px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 7h10M7 12h10M7 17h10"/>
                </svg>
            </div>
            <div style="flex: 1;">
                <h1 style="font-size: 24px; font-weight: 700; margin: 0;">Transfer Approvals</h1>
                <p style="margin: 4px 0 0; opacity: 0.9; font-size: 14px;">Review and approve transfer requests</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; margin-bottom: 24px;">
        <div style="background: white; border-radius: 12px; padding: 16px; border: 2px solid #dbeafe;">
            <div style="font-size: 24px; font-weight: 700; color: #0891b2;">18</div>
            <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">Pending</div>
        </div>
        <div style="background: white; border-radius: 12px; padding: 16px; border: 2px solid #d1fae5;">
            <div style="font-size: 24px; font-weight: 700; color: #059669;">89</div>
            <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">Approved Today</div>
        </div>
        <div style="background: white; border-radius: 12px; padding: 16px; border: 2px solid #fef3c7;">
            <div style="font-size: 24px; font-weight: 700; color: #f59e0b;">₱5.2M</div>
            <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">Total Amount</div>
        </div>
    </div>

    <!-- Filters -->
    <div style="background: white; border-radius: 12px; padding: 16px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 12px;">
            <div>
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 6px; color: #6b7280;">Date From</label>
                <input type="date" style="width: 100%; padding: 8px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
            </div>
            <div>
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 6px; color: #6b7280;">Date To</label>
                <input type="date" style="width: 100%; padding: 8px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
            </div>
            <div>
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 6px; color: #6b7280;">Type</label>
                <select style="width: 100%; padding: 8px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                    <option>All Types</option>
                    <option>Internal</option>
                    <option>External</option>
                    <option>International</option>
                </select>
            </div>
            <div style="display: flex; align-items: flex-end;">
                <button style="width: 100%; padding: 8px; background: #0891b2; color: white; border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;">Filter</button>
            </div>
        </div>
    </div>

    <!-- Transfers Table -->
    <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
        <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Pending Transfers</h3>
        
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="border-bottom: 2px solid #e5e7eb; background: #f9fafb;">
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ID</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">DATE</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">CUSTOMER</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">FROM</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">TO</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">AMOUNT</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transfer in transfers)
                {
                    <tr style="border-bottom: 1px solid #e5e7eb; transition: background-color 0.2s;">
                        <td style="padding: 16px; font-family: monospace; font-weight: 600; color: #0891b2;">@transfer.Id</td>
                        <td style="padding: 16px; font-size: 14px;">@transfer.Date.ToString("MMM dd, yyyy")</td>
                        <td style="padding: 16px;">
                            <div style="font-weight: 600;">@transfer.CustomerName</div>
                            <div style="font-size: 12px; color: #6b7280;">@transfer.CustomerAccount</div>
                        </td>
                        <td style="padding: 16px; font-family: monospace; font-size: 12px;">@transfer.FromAccount</td>
                        <td style="padding: 16px; font-family: monospace; font-size: 12px;">@transfer.ToAccount</td>
                        <td style="padding: 16px; font-size: 16px; font-weight: 700; color: #0891b2;">₱@transfer.Amount.ToString("N2")</td>
                        <td style="padding: 16px;">
                            <div style="display: flex; gap: 8px;">
                                <button @onclick="() => ShowReviewModal(transfer)" style="background: #0891b2; color: white; padding: 6px 12px; border: none; border-radius: 6px; font-size: 12px; font-weight: 600; cursor: pointer;">Review</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Review Modal -->
@if (showReviewModal && selectedTransfer != null)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); display: flex; align-items: center; justify-content: center; z-index: 9999;" @onclick="CloseReviewModal">
        <div style="background: white; border-radius: 16px; padding: 32px; max-width: 600px; width: 90%; box-shadow: 0 20px 60px rgba(0,0,0,0.3);" @onclick:stopPropagation>
            <div style="text-align: center; margin-bottom: 24px;">
                <div style="width: 64px; height: 64px; background: linear-gradient(135deg, #0891b2, #0e7490); border-radius: 50%; margin: 0 auto 16px; display: flex; align-items: center; justify-content: center;">
                    <svg width="32" height="32" fill="none" stroke="white" stroke-width="2">
                        <path d="M7 7h10M7 12h10M7 17h10"/>
                    </svg>
                </div>
                <h2 style="font-size: 20px; font-weight: 700; margin: 0;">Review Transfer</h2>
                <p style="font-size: 14px; color: #6b7280; margin-top: 4px;">Transfer request between accounts</p>
            </div>

            <div style="background: #f9fafb; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px;">
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Transaction ID</div>
                        <div style="font-weight: 600;">@selectedTransfer.Id</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Date</div>
                        <div style="font-weight: 600;">@selectedTransfer.Date.ToString("MMM dd, yyyy")</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Customer</div>
                        <div style="font-weight: 600;">@selectedTransfer.CustomerName</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">From Account</div>
                        <div style="font-weight: 600; font-family: monospace;">@selectedTransfer.FromAccount</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">To Account</div>
                        <div style="font-weight: 600; font-family: monospace;">@selectedTransfer.ToAccount</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Amount</div>
                        <div style="font-size: 18px; font-weight: 700; color: #0891b2;">₱@selectedTransfer.Amount.ToString("N2")</div>
                    </div>
                </div>
            </div>

            <div style="margin-bottom: 24px;">
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 8px;">Admin Notes (Optional)</label>
                <textarea @bind="reviewNotes" style="width: 100%; padding: 12px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px; resize: vertical;" rows="3" placeholder="Add notes for this review..."></textarea>
            </div>

            <div style="display: flex; gap: 12px;">
                <button @onclick="CloseReviewModal" style="flex: 1; padding: 12px; background: #f3f4f6; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">Cancel</button>
                <button style="flex: 1; padding: 12px; background: #dc2626; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">Reject</button>
                <button style="flex: 1; padding: 12px; background: #059669; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">Approve</button>
            </div>
        </div>
    </div>
}

@code {
    private List<TransferItem> transfers = new();
    private bool showReviewModal = false;
    private TransferItem? selectedTransfer = null;
    private string reviewNotes = "";

    protected override void OnInitialized()
    {
        transfers = new List<TransferItem>
        {
            new() { Id = "TRF-20251113001", Date = DateTime.Now, CustomerName = "Carlos Mendoza", CustomerAccount = "BFAS-3000000001", FromAccount = "BFAS-3000000001", ToAccount = "BFAS-3000000002", Amount = 25000 },
            new() { Id = "TRF-20251113002", Date = DateTime.Now.AddMinutes(-30), CustomerName = "Linda Cruz", CustomerAccount = "BFAS-3000000003", FromAccount = "BFAS-3000000003", ToAccount = "BFAS-3000000004", Amount = 50000 },
            new() { Id = "TRF-20251113003", Date = DateTime.Now.AddHours(-1), CustomerName = "Miguel Flores", CustomerAccount = "BFAS-3000000005", FromAccount = "BFAS-3000000005", ToAccount = "BFAS-3000000006", Amount = 75000 },
            new() { Id = "TRF-20251113004", Date = DateTime.Now.AddHours(-2), CustomerName = "Rosa Martinez", CustomerAccount = "BFAS-3000000007", FromAccount = "BFAS-3000000007", ToAccount = "BFAS-3000000008", Amount = 100000 },
        };
    }

    private void ShowReviewModal(TransferItem transfer)
    {
        selectedTransfer = transfer;
        showReviewModal = true;
    }

    private void CloseReviewModal()
    {
        showReviewModal = false;
        selectedTransfer = null;
        reviewNotes = "";
    }

    private class TransferItem
    {
        public string Id { get; set; } = "";
        public DateTime Date { get; set; }
        public string CustomerName { get; set; } = "";
        public string CustomerAccount { get; set; } = "";
        public string FromAccount { get; set; } = "";
        public string ToAccount { get; set; } = "";
        public decimal Amount { get; set; }
    }
}
