@page "/admin/approvals/withdrawals"
@layout AdminLayout

<div class="section-header">
    <h2 class="section-title">üí∏ Withdrawal Approvals</h2>
    <p style="color: var(--text-secondary); font-size: 14px; margin-top: 8px;">
        Review and approve/reject customer withdrawal requests
    </p>
</div>

<!-- Statistics Cards -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 20px; margin-bottom: 24px;">
    <div style="background: linear-gradient(135deg, #fef3c7, #fde68a); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #92400e; font-weight: 600; margin-bottom: 8px;">‚è≥ PENDING APPROVAL</div>
        <div style="font-size: 32px; font-weight: 700; color: #92400e;">16</div>
        <div style="font-size: 12px; color: #92400e; margin-top: 4px;">Awaiting review</div>
    </div>
    <div style="background: linear-gradient(135deg, #d1fae5, #a7f3d0); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #065f46; font-weight: 600; margin-bottom: 8px;">‚úÖ APPROVED TODAY</div>
        <div style="font-size: 32px; font-weight: 700; color: #065f46;">22</div>
        <div style="font-size: 12px; color: #065f46; margin-top: 4px;">Total: ‚Ç±185,000.00</div>
    </div>
    <div style="background: linear-gradient(135deg, #fee2e2, #fecaca); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #991b1b; font-weight: 600; margin-bottom: 8px;">‚ùå REJECTED TODAY</div>
        <div style="font-size: 32px; font-weight: 700; color: #991b1b;">5</div>
        <div style="font-size: 12px; color: #991b1b; margin-top: 4px;">Insufficient funds/Limit exceeded</div>
    </div>
</div>

<!-- Filters -->
<div style="background: white; border-radius: 16px; padding: 20px; border: 1px solid var(--border); margin-bottom: 24px;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
        <div class="form-group">
            <label class="form-label">Status</label>
            <select class="form-control">
                <option>All Statuses</option>
                <option selected>Pending</option>
                <option>Approved</option>
                <option>Rejected</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Date Range</label>
            <input type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label">Amount Range</label>
            <select class="form-control">
                <option>All Amounts</option>
                <option>Under ‚Ç±10,000</option>
                <option>‚Ç±10,000 - ‚Ç±50,000</option>
                <option>Over ‚Ç±50,000</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Withdrawal Method</label>
            <select class="form-control">
                <option>All Methods</option>
                <option>ATM</option>
                <option>Over-the-Counter</option>
                <option>Online</option>
            </select>
        </div>
    </div>
</div>

<!-- Pending Withdrawals Table -->
<div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid var(--border);">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h3 style="font-size: 18px; font-weight: 700;">Pending Withdrawal Requests</h3>
        <div style="display: flex; gap: 12px;">
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px; font-size: 14px;">
                üì• Export List
            </button>
            <button class="btn" style="background: #10b981; color: white; padding: 8px 16px; font-size: 14px;">
                ‚úÖ Approve Selected
            </button>
        </div>
    </div>

    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="border-bottom: 2px solid var(--border); background: #f9fafb;">
                <th style="padding: 12px; text-align: left;">
                    <input type="checkbox" style="width: 18px; height: 18px; cursor: pointer;" />
                </th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">TRANSACTION ID</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">DATE & TIME</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">CUSTOMER</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACCOUNT</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">METHOD</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">AMOUNT</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">PURPOSE</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">DAILY LIMIT</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 10; i++)
            {
                <tr style="border-bottom: 1px solid var(--border); transition: background 0.2s;" onmouseover="this.style.background='#f9fafb'" onmouseout="this.style.background='white'">
                    <td style="padding: 16px;">
                        <input type="checkbox" style="width: 18px; height: 18px; cursor: pointer;" />
                    </td>
                    <td style="padding: 16px; font-family: monospace; font-weight: 600; color: #dc2626;">WDR-@DateTime.Now.ToString("yyyyMMdd")@(i.ToString("000"))</td>
                    <td style="padding: 16px; font-size: 14px;">@DateTime.Now.ToString("MMM dd, yyyy")<br/><span style="font-size: 12px; color: #6b7280;">@DateTime.Now.ToString("hh:mm tt")</span></td>
                    <td style="padding: 16px;">
                        <div style="font-weight: 600;">Maria Santos</div>
                        <div style="font-size: 12px; color: #6b7280;">+63 918 765 4321</div>
                    </td>
                    <td style="padding: 16px; font-family: monospace; font-size: 13px;">BFAS-200000000@i</td>
                    <td style="padding: 16px;">
                        <span style="padding: 4px 8px; background: #fef3c7; color: #92400e; border-radius: 6px; font-size: 12px; font-weight: 600;">Teller</span>
                    </td>
                    <td style="padding: 16px; font-size: 16px; font-weight: 700; color: #dc2626;">‚Ç±@((i * 3000).ToString("N2"))</td>
                    <td style="padding: 16px; font-size: 13px;">Personal Use</td>
                    <td style="padding: 16px;">
                        <div style="font-size: 12px; color: #6b7280; margin-bottom: 4px;">‚Ç±@((i * 3000).ToString("N0")) / ‚Ç±50,000</div>
                        <div style="width: 100px; height: 6px; background: #e5e7eb; border-radius: 3px; overflow: hidden;">
                            <div style="width: @((i * 6))%; height: 100%; background: #f59e0b;"></div>
                        </div>
                    </td>
                    <td style="padding: 16px;">
                        <div style="display: flex; gap: 8px;">
                            <button class="btn" style="background: white; border: 2px solid #e5e7eb; color: #374151; padding: 6px 12px; font-size: 13px; font-weight: 600;">
                                üëÅÔ∏è View
                            </button>
                            <button class="btn" style="background: #10b981; color: white; padding: 6px 12px; font-size: 13px; font-weight: 600;">
                                ‚úÖ Approve
                            </button>
                            <button class="btn" style="background: #dc2626; color: white; padding: 6px 12px; font-size: 13px; font-weight: 600;">
                                ‚ùå Reject
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border);">
        <div style="font-size: 14px; color: #6b7280;">
            Showing <strong>1-10</strong> of <strong>16</strong> pending withdrawals
        </div>
        <div style="display: flex; gap: 8px;">
            <button class="btn" style="background: #f3f4f6; color: #9ca3af; padding: 8px 16px;">‚Üê Previous</button>
            <button class="btn" style="background: #10b981; color: white; padding: 8px 16px;">1</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">2</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">Next ‚Üí</button>
        </div>
    </div>
</div>

