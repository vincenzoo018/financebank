@page "/admin/approvals/withdrawals"
@layout AdminLayout

<div style="padding: 24px; max-width: 1400px; margin: 0 auto;">
    <!-- Header -->
    <div style="background: linear-gradient(135deg, #dc2626, #991b1b); border-radius: 16px; padding: 24px; margin-bottom: 24px; color: white;">
        <div style="display: flex; align-items: center; gap: 16px;">
            <div style="width: 48px; height: 48px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 19V5M5 12l7-7 7 7"/>
                </svg>
            </div>
            <div style="flex: 1;">
                <h1 style="font-size: 24px; font-weight: 700; margin: 0;">Withdrawal Approvals</h1>
                <p style="margin: 4px 0 0; opacity: 0.9; font-size: 14px;">Review and approve withdrawal requests</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; margin-bottom: 24px;">
        <div style="background: white; border-radius: 12px; padding: 16px; border: 2px solid #fee2e2;">
            <div style="font-size: 24px; font-weight: 700; color: #dc2626;">24</div>
            <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">Pending</div>
        </div>
        <div style="background: white; border-radius: 12px; padding: 16px; border: 2px solid #d1fae5;">
            <div style="font-size: 24px; font-weight: 700; color: #059669;">156</div>
            <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">Approved Today</div>
        </div>
        <div style="background: white; border-radius: 12px; padding: 16px; border: 2px solid #fef3c7;">
            <div style="font-size: 24px; font-weight: 700; color: #f59e0b;">₱2.1M</div>
            <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">Total Amount</div>
        </div>
    </div>

    <!-- Filters -->
    <div style="background: white; border-radius: 12px; padding: 16px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 12px;">
            <div>
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 6px; color: #6b7280;">Date From</label>
                <input type="date" style="width: 100%; padding: 8px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
            </div>
            <div>
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 6px; color: #6b7280;">Date To</label>
                <input type="date" style="width: 100%; padding: 8px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
            </div>
            <div>
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 6px; color: #6b7280;">Method</label>
                <select style="width: 100%; padding: 8px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px;">
                    <option>All Methods</option>
                    <option>ATM</option>
                    <option>Teller</option>
                    <option>Online</option>
                </select>
            </div>
            <div style="display: flex; align-items: flex-end;">
                <button style="width: 100%; padding: 8px; background: #dc2626; color: white; border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer;">Filter</button>
            </div>
        </div>
    </div>

    <!-- Withdrawals Table -->
    <div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid #e5e7eb;">
        <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 20px;">Pending Withdrawals</h3>
        
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="border-bottom: 2px solid #e5e7eb; background: #f9fafb;">
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ID</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">DATE</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">CUSTOMER</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACCOUNT</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">METHOD</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">AMOUNT</th>
                    <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var withdrawal in withdrawals)
                {
                    <tr style="border-bottom: 1px solid #e5e7eb; transition: background-color 0.2s;">
                        <td style="padding: 16px; font-family: monospace; font-weight: 600; color: #dc2626;">@withdrawal.Id</td>
                        <td style="padding: 16px; font-size: 14px;">@withdrawal.Date.ToString("MMM dd, yyyy")</td>
                        <td style="padding: 16px;">
                            <div style="font-weight: 600;">@withdrawal.CustomerName</div>
                            <div style="font-size: 12px; color: #6b7280;">@withdrawal.CustomerAccount</div>
                        </td>
                        <td style="padding: 16px; font-family: monospace; font-size: 13px;">@withdrawal.CustomerAccount</td>
                        <td style="padding: 16px;">
                            <span style="padding: 4px 8px; background: #fef3c7; color: #92400e; border-radius: 6px; font-size: 12px; font-weight: 600;">@withdrawal.Method</span>
                        </td>
                        <td style="padding: 16px; font-size: 16px; font-weight: 700; color: #dc2626;">₱@withdrawal.Amount.ToString("N2")</td>
                        <td style="padding: 16px;">
                            <div style="display: flex; gap: 8px;">
                                <button @onclick="() => ShowReviewModal(withdrawal)" style="background: #dc2626; color: white; padding: 6px 12px; border: none; border-radius: 6px; font-size: 12px; font-weight: 600; cursor: pointer;">Review</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Review Modal -->
@if (showReviewModal && selectedWithdrawal != null)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); display: flex; align-items: center; justify-content: center; z-index: 9999;" @onclick="CloseReviewModal">
        <div style="background: white; border-radius: 16px; padding: 32px; max-width: 500px; width: 90%; box-shadow: 0 20px 60px rgba(0,0,0,0.3);" @onclick:stopPropagation>
            <div style="text-align: center; margin-bottom: 24px;">
                <div style="width: 64px; height: 64px; background: linear-gradient(135deg, #dc2626, #991b1b); border-radius: 50%; margin: 0 auto 16px; display: flex; align-items: center; justify-content: center;">
                    <svg width="32" height="32" fill="none" stroke="white" stroke-width="2">
                        <path d="M12 19V5M5 12l7-7 7 7"/>
                    </svg>
                </div>
                <h2 style="font-size: 20px; font-weight: 700; margin: 0;">Review Withdrawal</h2>
                <p style="font-size: 14px; color: #6b7280; margin-top: 4px;">@selectedWithdrawal.Method withdrawal request</p>
            </div>

            <div style="background: #f9fafb; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 16px;">
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Transaction ID</div>
                        <div style="font-weight: 600;">@selectedWithdrawal.Id</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Date</div>
                        <div style="font-weight: 600;">@selectedWithdrawal.Date.ToString("MMM dd, yyyy")</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Customer</div>
                        <div style="font-weight: 600;">@selectedWithdrawal.CustomerName</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Account</div>
                        <div style="font-weight: 600; font-family: monospace;">@selectedWithdrawal.CustomerAccount</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Method</div>
                        <div style="font-weight: 600;">@selectedWithdrawal.Method</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; color: #6b7280; margin-bottom: 4px;">Amount</div>
                        <div style="font-size: 18px; font-weight: 700; color: #dc2626;">₱@selectedWithdrawal.Amount.ToString("N2")</div>
                    </div>
                </div>
            </div>

            <div style="margin-bottom: 24px;">
                <label style="display: block; font-size: 12px; font-weight: 600; margin-bottom: 8px;">Admin Notes (Optional)</label>
                <textarea @bind="reviewNotes" style="width: 100%; padding: 12px; border: 1px solid #e5e7eb; border-radius: 8px; font-size: 14px; resize: vertical;" rows="3" placeholder="Add notes for this review..."></textarea>
            </div>

            <div style="display: flex; gap: 12px;">
                <button @onclick="CloseReviewModal" style="flex: 1; padding: 12px; background: #f3f4f6; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">Cancel</button>
                <button style="flex: 1; padding: 12px; background: #dc2626; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">Reject</button>
                <button style="flex: 1; padding: 12px; background: #059669; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">Approve</button>
            </div>
        </div>
    </div>
}

@code {
    private List<WithdrawalItem> withdrawals = new();
    private bool showReviewModal = false;
    private WithdrawalItem? selectedWithdrawal = null;
    private string reviewNotes = "";

    protected override void OnInitialized()
    {
        withdrawals = new List<WithdrawalItem>
        {
            new() { Id = "WDR-20251113001", Date = DateTime.Now, CustomerName = "Maria Santos", CustomerAccount = "BFAS-2000000001", Method = "ATM", Amount = 3000 },
            new() { Id = "WDR-20251113002", Date = DateTime.Now.AddHours(-1), CustomerName = "Pedro Reyes", CustomerAccount = "BFAS-2000000002", Method = "Teller", Amount = 6000 },
            new() { Id = "WDR-20251113003", Date = DateTime.Now.AddHours(-2), CustomerName = "Ana Garcia", CustomerAccount = "BFAS-2000000003", Method = "Online", Amount = 9000 },
            new() { Id = "WDR-20251113004", Date = DateTime.Now.AddDays(-1), CustomerName = "Carlos Lopez", CustomerAccount = "BFAS-2000000004", Method = "ATM", Amount = 4500 },
        };
    }

    private void ShowReviewModal(WithdrawalItem withdrawal)
    {
        selectedWithdrawal = withdrawal;
        showReviewModal = true;
    }

    private void CloseReviewModal()
    {
        showReviewModal = false;
        selectedWithdrawal = null;
        reviewNotes = "";
    }

    private class WithdrawalItem
    {
        public string Id { get; set; } = "";
        public DateTime Date { get; set; }
        public string CustomerName { get; set; } = "";
        public string CustomerAccount { get; set; } = "";
        public string Method { get; set; } = "";
        public decimal Amount { get; set; }
    }
}
