@page "/admin/banking/accounts"
@layout AdminLayout

<div class="section-header">
    <h2 class="section-title">üíº Bank Accounts Management</h2>
    <p style="color: var(--text-secondary); font-size: 14px; margin-top: 8px;">
        Manage all customer bank accounts, balances, and account details
    </p>
</div>

<!-- Action Bar -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <div style="display: flex; gap: 12px;">
        <button class="btn" style="background: #10b981; color: white; padding: 12px 24px; font-weight: 600;">
            ‚ûï New Account
        </button>
        <button class="btn" style="background: #3b82f6; color: white; padding: 12px 24px;">
            üì• Import Accounts
        </button>
    </div>
    <div style="display: flex; gap: 12px;">
        <button class="btn" style="background: white; border: 2px solid var(--border); color: #374151; padding: 12px 24px;">
            üìä Export to Excel
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 20px; margin-bottom: 24px;">
    <div style="background: linear-gradient(135deg, #dbeafe, #bfdbfe); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #1e40af; font-weight: 600; margin-bottom: 8px;">üìä TOTAL ACCOUNTS</div>
        <div style="font-size: 32px; font-weight: 700; color: #1e40af;">1,543</div>
        <div style="font-size: 12px; color: #1e40af; margin-top: 4px;">Active accounts</div>
    </div>
    <div style="background: linear-gradient(135deg, #d1fae5, #a7f3d0); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #065f46; font-weight: 600; margin-bottom: 8px;">üí∞ TOTAL DEPOSITS</div>
        <div style="font-size: 32px; font-weight: 700; color: #065f46;">‚Ç±125.8M</div>
        <div style="font-size: 12px; color: #065f46; margin-top: 4px;">Combined balance</div>
    </div>
    <div style="background: linear-gradient(135deg, #fef3c7, #fde68a); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #92400e; font-weight: 600; margin-bottom: 8px;">‚ûï NEW THIS MONTH</div>
        <div style="font-size: 32px; font-weight: 700; color: #92400e;">87</div>
        <div style="font-size: 12px; color: #92400e; margin-top: 4px;">New accounts</div>
    </div>
    <div style="background: linear-gradient(135deg, #fee2e2, #fecaca); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #991b1b; font-weight: 600; margin-bottom: 8px;">üîí FROZEN/CLOSED</div>
        <div style="font-size: 32px; font-weight: 700; color: #991b1b;">23</div>
        <div style="font-size: 12px; color: #991b1b; margin-top: 4px;">Inactive accounts</div>
    </div>
</div>

<!-- Filters -->
<div style="background: white; border-radius: 16px; padding: 20px; border: 1px solid var(--border); margin-bottom: 24px;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
        <div class="form-group">
            <label class="form-label">Account Type</label>
            <select class="form-control">
                <option>All Types</option>
                <option>Savings Account</option>
                <option>Checking Account</option>
                <option>Time Deposit</option>
                <option>Business Account</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Status</label>
            <select class="form-control">
                <option>All Statuses</option>
                <option>Active</option>
                <option>Frozen</option>
                <option>Closed</option>
                <option>Pending</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Balance Range</label>
            <select class="form-control">
                <option>All Balances</option>
                <option>Under ‚Ç±10,000</option>
                <option>‚Ç±10,000 - ‚Ç±100,000</option>
                <option>Over ‚Ç±100,000</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Search</label>
            <input type="text" class="form-control" placeholder="Account or customer name..." />
        </div>
    </div>
</div>

<!-- Bank Accounts Table -->
<div style="background: white; border-radius: 16px; padding: 24px; border: 1px solid var(--border);">
    <h3 style="font-size: 18px; font-weight: 700; margin-bottom: 20px;">All Bank Accounts</h3>

    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="border-bottom: 2px solid var(--border); background: #f9fafb;">
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACCOUNT NUMBER</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">CUSTOMER NAME</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">ACCOUNT TYPE</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">OPENED DATE</th>
                <th style="padding: 12px; text-align: right; font-size: 12px; font-weight: 700;">CURRENT BALANCE</th>
                <th style="padding: 12px; text-align: left; font-size: 12px; font-weight: 700;">STATUS</th>
                <th style="padding: 12px; text-align: center; font-size: 12px; font-weight: 700;">ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 15; i++)
            {
                var accountTypes = new[] { "Savings", "Checking", "Time Deposit", "Business" };
                var statuses = new[] { "Active", "Active", "Active", "Frozen" };
                var accountType = accountTypes[i % accountTypes.Length];
                var status = statuses[i % statuses.Length];
                var statusColor = status == "Active" ? "#d1fae5" : "#fee2e2";
                var statusText = status == "Active" ? "#065f46" : "#991b1b";
                var balance = (i * 45000) + (i * 1230.50);
                
                <tr style="border-bottom: 1px solid var(--border); transition: background 0.2s;" onmouseover="this.style.background='#f9fafb'" onmouseout="this.style.background='white'">
                    <td style="padding: 16px; font-family: monospace; font-weight: 600; color: #3b82f6;">BFAS-@((1000000 + i).ToString())</td>
                    <td style="padding: 16px;">
                        <div style="font-weight: 600; margin-bottom: 2px;">@(i % 2 == 0 ? "Juan Dela Cruz" : "Maria Santos")</div>
                        <div style="font-size: 12px; color: #6b7280;">ID: CUST-@(10000 + i)</div>
                    </td>
                    <td style="padding: 16px;">
                        <span style="padding: 4px 10px; background: #f3f4f6; color: #374151; border-radius: 6px; font-size: 12px; font-weight: 600;">@accountType</span>
                    </td>
                    <td style="padding: 16px; font-size: 14px;">@DateTime.Now.AddDays(-i * 30).ToString("MMM dd, yyyy")</td>
                    <td style="padding: 16px; text-align: right; font-size: 16px; font-weight: 700; color: #10b981;">‚Ç±@balance.ToString("N2")</td>
                    <td style="padding: 16px;">
                        <span style="padding: 4px 10px; background: @statusColor; color: @statusText; border-radius: 6px; font-size: 12px; font-weight: 600;">‚óè  @status</span>
                    </td>
                    <td style="padding: 16px; text-align: center;">
                        <div style="display: flex; gap: 8px; justify-content: center;">
                            <button class="btn" style="background: white; border: 2px solid #e5e7eb; color: #374151; padding: 6px 12px; font-size: 13px;">
                                üëÅÔ∏è View
                            </button>
                            <button class="btn" style="background: #3b82f6; color: white; padding: 6px 12px; font-size: 13px;">
                                ‚úèÔ∏è Edit
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border);">
        <div style="font-size: 14px; color: #6b7280;">
            Showing <strong>1-15</strong> of <strong>1,543</strong> accounts
        </div>
        <div style="display: flex; gap: 8px;">
            <button class="btn" style="background: #f3f4f6; color: #9ca3af; padding: 8px 16px;">‚Üê Previous</button>
            <button class="btn" style="background: #10b981; color: white; padding: 8px 16px;">1</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">2</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">3</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">...</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">103</button>
            <button class="btn" style="background: #f3f4f6; color: #374151; padding: 8px 16px;">Next ‚Üí</button>
        </div>
    </div>
</div>

