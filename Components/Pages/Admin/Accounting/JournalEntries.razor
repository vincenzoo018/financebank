    </div>
    <div style="background: linear-gradient(135deg, #fef3c7, #fde68a); border-radius: 16px; padding: 24px;">
        <div style="font-size: 13px; color: #92400e; font-weight: 600; margin-bottom: 8px;">‚è≥ PENDING APPROVAL</div>
        <div style="font-size: 32px; font-weight: 700; color: #92400e;">23</div>
        <div style="font-size: 12px; color: #92400e; margin-top: 4px;">Awaiting review</div>
    </div>
</div>

<!-- Filters -->
<div style="background: white; border-radius: 16px; padding: 20px; border: 1px solid var(--border); margin-bottom: 24px;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
        <div class="form-group">
            <label class="form-label">Date Range</label>
            <input type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label">Entry Type</label>
            <select class="form-control">
                <option>All Types</option>
                <option>General Journal</option>
                <option>Sales Journal</option>
                <option>Purchase Journal</option>
                <option>Cash Receipts Journal</option>
                <option>Cash Disbursements Journal</option>
                <option>Adjusting Entries</option>
                <option>Closing Entries</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Status</label>
            <select class="form-control">
                <option>All Statuses</option>
                <option>Draft</option>
                <option>Pending Approval</option>
                <option>Approved</option>
                <option>Posted</option>
                <option>Rejected</option>
            </select>
        </div>
        <div class="form-group">
            <label class="form-label">Account Category</label>
            <select class="form-control">
                <option>All Categories</option>
                <option>Assets</option>
                <option>Liabilities</option>
                <option>Equity</option>
                <option>Revenue</option>
                <option>Expenses</option>
            </select>
        </div>
    </div>
</div>

